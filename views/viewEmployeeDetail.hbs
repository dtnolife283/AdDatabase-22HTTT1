<div class="container mt-4">
    <div class="me-3 ms-3">
        <h2 class="mb-4">Employee Details</h2>
        <div class="card mb-4 shadow">
            <div class="card-body">
                <h5 class="card-title text-primary">{{employee.EmployeeName}}</h5>
                <p class="card-text"><strong>Phone Number:</strong> {{employee.PhoneNumber}}</p>
                <p class="card-text"><strong>Date of Birth:</strong> {{employee.DoB}}</p>
                <p class="card-text"><strong>Gender:</strong> {{#if (eq employee.Gender 'M')}} Male {{else}} Female {{/if}}</p>
                <p class="card-text"><strong>Salary:</strong> {{employee.Salary}}</p>
                <p class="card-text"><strong>Total Days Off:</strong> {{employee.TotalDaysOff}}</p>
                <p class="card-text"><strong>Remaining Days Off:</strong> {{employee.RemainingDaysOff}}</p>
                <p class="card-text"><strong>Department:</strong> {{employee.DepartmentName}}</p>
            </div>
        </div>

        <h3 class="mt-5">Branch History</h3>
        <div class="table-responsive mb-4">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Area</th>
                        <th>Branch</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each branchHistory}}
                        <tr>
                            <td>{{this.AreaName}}</td>
                            <td>{{this.BranchName}}</td>
                            <td>{{this.StartDate}}</td>
                            <td>{{#if this.EndDate}}{{this.EndDate}}{{else}}-{{/if}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <h3>Service Scores</h3>
        <div class="row">
            <!-- Daily Service Scores -->
            <div class="col-12 col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Daily Service Scores</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Average Service Score</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each dailyAverageServiceScores}}
                                        <tr>
                                            <td>{{this.period}}</td>
                                            <td>{{this.avg_service_score}}</td>
                                        </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Monthly Service Scores -->
            <div class="col-12 col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Monthly Service Scores</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Month</th>
                                        <th>Average Service Score</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each monthlyAverageServiceScores}}
                                        <tr>
                                            <td>{{this.period}}</td>
                                            <td>{{this.avg_service_score}}</td>
                                        </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quarterly Service Scores -->
            <div class="col-12 col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Quarterly Service Scores</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Quarter</th>
                                        <th>Average Service Score</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each quarterlyAverageServiceScores}}
                                        <tr>
                                            <td>{{this.period}}</td>
                                            <td>{{this.avg_service_score}}</td>
                                        </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Yearly Service Scores -->
            <div class="col-12 col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Yearly Service Scores</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Year</th>
                                        <th>Average Service Score</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each yearlyAverageServiceScores}}
                                        <tr>
                                            <td>{{this.period}}</td>
                                            <td>{{this.avg_service_score}}</td>
                                        </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <a href="/employee/view-employee" class="btn btn-outline-secondary mt-4">Back to Employee List</a>
    </div>
</div>

<div class="container mt-3">
    <h2>Customer Management</h2>
    <div class="d-flex justify-content-between mb-3">
        <input
            type="text"
            id="searchBar"
            class="form-control w-50"
            placeholder="Search by Name, Email, or SSID"
            onkeyup="filterCustomers()"
        />
    </div>
    <div class="d-flex justify-content-center">
        <table class="table table-striped table-hover table-bordered w-auto">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Customer Name</th>
                    <th>Phone Number</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>SSID</th>
                    <th>ID Card</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="customerTable">
                {{#each allCus}}
                <tr>
                    <td>{{this.ID_Customer}}</td>
                    <td>{{this.CustomerName}}</td>
                    <td>{{this.PhoneNumber}}</td>
                    <td>{{this.Gender}}</td>
                    <td>{{this.Email}}</td>
                    <td>{{this.SSID}}</td>
                    <td>{{this.ID_Card}}</td>
                    <td>
                        <a href="/employee/manage_cus/edit/{{this.ID_Customer}}" class="btn btn-sm btn-primary" title="Edit">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="/employee/manage_cus/delete/{{this.ID_Customer}}" class="btn btn-sm btn-danger" title="Remove" data-bs-toggle="tooltip" data-bs-placement="top" onclick="return confirm('Are you sure?');">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script src="../static/js/manage_cus.js"></script>

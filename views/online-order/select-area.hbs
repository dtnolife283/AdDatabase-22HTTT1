<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading mt-3">Choose your area</h1>
      <p class="lead text-muted">Select an area near you and discover your next
        favourite spot!</p>
      <p>
        <a href="/online" class="btn btn-primary my-2">Go back</a>
      </p>
    </div>
  </section>

  <div class="album py-5">
    <div class="container">
      <div class="row">
        {{#each allAreas}}
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              {{! <img
                class="card-img-top"
                data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail"
                alt="Thumbnail [100%x225]"
                style="height: 225px; width: 100%; display: block;"
                src="https://img.goodfon.com/wallpaper/big/c/ba/gta-5-los-santos-rokstar-gorod.webp"
                data-holder-rendered="true"
              /> }}
              <div class="card-body">
                <p class="cart-title"><strong>{{AreaName}}</strong></p>
                <p class="card-text">Beautiful area, come eat.</p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <a
                      href="/online/online-order/area/{{ID_Area}}"
                      type="button"
                      class="btn btn-sm btn-outline-secondary"
                    >Select</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>

</main>
<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading mt-3">Choose your restaurant</h1>
      <p class="lead text-muted">Pick a restaurant near you, then place an
        order!</p>
      <p>
        <a href="/online-order" class="btn btn-primary my-2">Go back</a>
      </p>
    </div>
  </section>

  <div class="album py-5">
    <div class="container">
      <div class="row">
        {{#each allBranches}}
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              {{! <img
                class="card-img-top"
                data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail"
                alt="Thumbnail [100%x225]"
                style="height: 225px; width: 100%; display: block;"
                src="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/2a/a2/dc/9b/the-log-interior.jpg?w=900&h=500&s=1"
                data-holder-rendered="true"
              /> }}
              <div class="card-body">
                <p class="cart-title"><strong>{{BranchName}}</strong></p>
                <p class="card-text">{{Address}}</p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <a
                      href="/online-order/branch/{{ID_Branch}}"
                      type="button"
                      class="btn btn-sm btn-outline-secondary"
                    >Select</a>
                  </div>
                  <small class="text-muted">+{{PhoneNumber}}</small>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>

</main>
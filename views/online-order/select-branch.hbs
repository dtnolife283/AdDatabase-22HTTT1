<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading mt-3">Choose your restaurant</h1>
      <p class="lead text-muted">Pick a restaurant near you, then place an
        order!</p>
      <p>
        <a href="/online/online-order" class="btn btn-primary my-2">Go back</a>
      </p>
    </div>
  </section>

  <div class="container mt-4">
    <div class="branch ms-3 me-3">
      <div class="row">
        {{#each allBranches}}
          <div class="col-md-6">
            <div class="branch-item card mb-4 shadow">
              <div class="card-body" id="{{ID_Branch}}">
                <h5 class="card-title text-primary">
                  <ion-icon name="storefront-outline"></ion-icon>
                  <a
                    href="/online/online-order/branch/{{ID_Branch}}"
                    style="text-decoration: none; color: black"
                  >
                    {{BranchName}}
                  </a>
                </h5>
                <p class="card-text d-flex align-items-center">
                  <i class="bi bi-geo me-2"></i>
                  <span><strong>Address:</strong> {{Address}}</span>
                </p>
                <p class="card-text d-flex align-items-center">
                  <i class="bi bi-telephone me-2"></i>
                  <span><strong>Phone Number:</strong> {{PhoneNumber}}</span>
                </p>
                <p class="card-text d-flex align-items-center">
                  <i class="bi bi-clock me-2"></i>
                  <span><strong>Opening Hour:</strong>
                    {{OpeningHour}}
                    -
                    {{CloseHour}}</span>
                </p>
              </div>
              <div class="card-footer text-end">
                <a
                  href="/online/online-order/branch/{{ID_Branch}}"
                  class="btn btn-sm btn-outline-primary"
                >
                  <i class="bi bi-clipboard me-1"></i>
                  Select
                </a>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</main>
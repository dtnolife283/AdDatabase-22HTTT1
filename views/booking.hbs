<div class="booking-section">
    <div class="overlay"></div>
    <img src="/static/picture/booking-background.jpg" alt="Sushi" class="background-image" />
    <h1 class="booking-text">Booking</h1>
</div>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 bg-dark rounded-3 shadow-lg">
            <div class="p-5 wow fadeInUp">
                <h5 class="section-title ff-secondary text-start text-primary fw-normal">Reservation</h5>
                <h1 class="text-white mb-4">Book A Table Online</h1>
                <form id="bookingForm">
                    <div class="row g-3">
                        <!-- Branch Selection -->
                        <div class="col-md-12">
                            <div class="form-floating">
                                <select class="form-select" id="branchSelect" required>
                                    <option value="">Select a Branch</option>
                                    {{#each topBranches}}
                                        <option>{{BranchName}}</option>
                                    {{/each}}
                                </select>
                                <label for="branchSelect">Select Branch</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="branch-info mt-2 text-white" style="display: none;">
                                <p>Branch Phone: <span id="branchPhone"></span></p>
                            </div>
                        </div>
                        <!-- Customer Information -->
                        <div class="col-md-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="name" placeholder="Your Name" required>
                                <label for="name">Your Name</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="email" class="form-control" id="email" placeholder="Your Email" required>
                                <label for="email">Your Email</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <select class="form-select" id="peopleCount" required>
                                    <option value="1">1 Person</option>
                                    <option value="2">2 People</option>
                                    <option value="3">3 People</option>
                                    <option value="4">4 People</option>
                                    <option value="5">5 People</option>
                                    <option value="6">6+ People</option>
                                </select>
                                <label for="peopleCount">Number of People</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="date" placeholder="Date" required>
                                <label for="date">Date (MM/DD/YY)</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="time" placeholder="Time" required>
                                <label for="time">Time (HH:MM)</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea class="form-control" placeholder="Special Request" id="message" style="height: 120px; resize: none;"></textarea>
                                <label for="message">Special Request</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary w-100 py-3" type="submit">Book Now</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Map of branch IDs to phone numbers
    const branchPhones = {
        "1": "5902063219",
        "2": "3544151022",
        "3": "8109498536",
        "4": "5108579373",
        "5": "4688214055",
        "6": "4370030239",
        "7": "8084299863",
        "8": "2556609985",
        "9": "7976829002",
        "10": "5796685720",
        "11": "2975107473",
        "12": "3527204564",
        "13": "0474557420",
        "14": "1232610960",
        "15": "2112788454",

    };

    // Event listener for branch selection
    document.getElementById("branchSelect").addEventListener("change", function () {
        const selectedBranch = this.value;
        const branchInfoDiv = document.querySelector(".branch-info");
        const branchPhoneSpan = document.getElementById("branchPhone");

        if (selectedBranch && branchPhones[selectedBranch]) {
            branchPhoneSpan.textContent = branchPhones[selectedBranch];
            branchInfoDiv.style.display = "block";
        } else {
            branchPhoneSpan.textContent = "";
            branchInfoDiv.style.display = "none";
        }
    });
</script>
<div class="container mt-3">
    <h2>Add Customer</h2>
    <form id="editCustomerForm">
        <input type="hidden" id="id" name="id" value="{{id}}">
        <div class="form-group">
            <label for="id">Id Customer:</label>
            <input type="text" class="form-control" id="id" name="id" value="{{id}}" readonly>
        </div>
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" value="" required>
        </div>
        <div class="form-group">
            <label for="name">SSID:</label>
            <input type="text" class="form-control" id="ssid" name="ssid" value="" required>
        </div>
        <div class="form-group">
            <label for="phone">Phone Number:</label>
            <input type="text" class="form-control" id="phone" name="phone" value="" required>
        </div>
        <div class="form-group">
            <label for="gender">Gender:</label>
            <select class="form-control" id="gender" name="gender">
                <option value="M" {{#if (eq customer.Gender "M")}}selected{{/if}}>Male</option>
                <option value="F" {{#if (eq customer.Gender "F")}}selected{{/if}}>Female</option>
            </select>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" name="email" value="" required>
        </div>
        <div class="form-group text-end mt-3"></div>
            <button type="submit" class="btn btn-success" onclick="confirmAdding()">Add Customer</button>
            <a href="/employee/manage_cus" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
